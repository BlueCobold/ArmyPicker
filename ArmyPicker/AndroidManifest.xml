<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="de.game_coding.armypicker"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="16"
		android:targetSdkVersion="21" />

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/launch"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name="de.game_coding.armypicker.MainActivity_"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/app_name"
			android:icon="@drawable/icon"
			android:launchMode="standard"
			android:windowSoftInputMode="stateHidden|adjustPan" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="de.game_coding.armypicker.ArmyActivity_"
			android:icon="@drawable/ic_action_view_as_list"
			android:label="@string/title_activity_army"
			android:windowSoftInputMode="stateHidden|adjustPan" >
		</activity>
		<activity
			android:name="de.game_coding.armypicker.CharacterActivity_"
			android:icon="@drawable/ic_crown"
			android:label="@string/title_activity_characters"
			android:windowSoftInputMode="stateHidden|adjustPan" >
		</activity>
		<activity
			android:name="de.game_coding.armypicker.BattalionActivity_"
			android:icon="@drawable/ic_skulls"
			android:label="@string/title_activity_battalions"
			android:windowSoftInputMode="stateHidden|adjustPan" >
		</activity>
	</application>

</manifest>
