<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:background="@drawable/item_gradient"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/list_item_points"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@+id/list_item_delete"
		android:textSize="20sp"
		android:gravity="right"
		android:layout_centerVertical="true"
		android:paddingRight="5dp"
		android:minWidth="50dp"
		android:textColor="#A0FFFFFF"
		android:text="180"
		/>
	
	<ImageView
		android:id="@+id/list_item_edit"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_toLeftOf="@+id/list_item_points"
		android:layout_centerVertical="true"
		android:focusable="false"
		android:src="@drawable/ic_action_edit" />

	<TextView
		android:id="@+id/list_item_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:paddingBottom="10dp"
		android:paddingLeft="30dp"
		android:paddingTop="10dp"
		android:textColor="#A0FFFFFF"
		android:textSize="20sp" />

	<ImageView
		android:id="@+id/list_item_delete"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:contentDescription="@string/delete_button"
		android:focusable="false"
		android:src="@drawable/ic_action_discard" />
	
</RelativeLayout>
