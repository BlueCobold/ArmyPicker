<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/army_list_gradient"
	android:orientation="vertical" >

	<TextView
		android:id="@+id/textView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:text="@string/pick_trait"
		android:textColor="@color/text_color"
		android:textAppearance="?android:attr/textAppearanceLarge" />

	<RelativeLayout
		android:id="@+id/first_option"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/textView1"
		android:layout_marginTop="10dp"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/base_option_add"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:padding="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_action_new" />

		<Spinner
			android:id="@+id/character_base_option"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10dp"
			android:layout_toLeftOf="@id/base_option_add" />
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/second_option"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/first_option"
		android:layout_marginTop="10dp"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/sub_option_add"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:padding="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_action_new" />

		<Spinner
			android:id="@+id/character_sub_option"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10dp"
			android:layout_toLeftOf="@+id/sub_option_add" />
	</RelativeLayout>
	
	<RelativeLayout
		android:id="@+id/third_option"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/second_option"
		android:layout_marginTop="10dp"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/subsub_option_add"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:padding="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_action_new" />

		<Spinner
			android:id="@+id/character_subsub_option"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10dp"
			android:layout_toLeftOf="@+id/subsub_option_add" />
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_alignParentBottom="true"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="1" >

		<Button
			android:id="@+id/option_select_abort"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:layout_weight="0.5"
			android:background="@null"
			android:text="@string/abort"
			android:textColor="@color/text_color" />

		<Button
			android:id="@+id/option_select_accept"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:layout_weight="0.5"
			android:background="@null"
			android:text="OK"
			android:textColor="@color/text_color" />
	</LinearLayout>

</RelativeLayout>
