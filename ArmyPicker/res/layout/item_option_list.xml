<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:padding="0dp" >

	<TextView
		android:id="@+id/option_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:paddingLeft="30dp"
		android:text="Option name"
		android:textColor="#A0FFFFFF"
		android:textSize="16sp" />

	<TextView
		android:id="@+id/option_points"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/option_name"
		android:paddingLeft="5dp"
		android:layout_centerVertical="true"
		android:text="(15)"
		android:textColor="#A0FFFFFF"
		android:textSize="16sp" />
	
	<ImageButton
		android:id="@+id/option_delete"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:background="@null"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_action_discard" />

	<TextView
		android:id="@+id/option_points_total"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/option_delete"
		android:paddingRight="10dp"
		android:gravity="right"
		android:minWidth="50dp"
		android:text="0"
		android:textColor="#A0FFFFFF"
		android:textSize="16sp" />

	<ImageButton
		android:id="@+id/option_add"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_centerVertical="true"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_toLeftOf="@+id/option_points_total"
		android:background="@null"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_action_new" />

	<TextView
		android:id="@+id/option_amount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@+id/option_add"
		android:layout_centerVertical="true"
		android:text="[1]"
		android:textColor="#A0FFFFFF"
		android:textSize="16sp" />

</RelativeLayout>